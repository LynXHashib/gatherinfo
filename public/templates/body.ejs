<section class="hero">
  <div class="hero-content">
    <h1>GatherInfo</h1>
    <p>Discover, share, and discuss the latest insights and products.</p>
    <% if (!isLoggedIn) { %>
    <a href="/user/signup" class="cta-btn">Get Started</a>
    <% } %>
  </div>
</section>

<% if (typeof hiddenMessage !== 'undefined' && hiddenMessage) { %>
<div class="alert-message"><%= hiddenMessage %></div>
<% } %>

<main>
  <section class="card-grid">
    <%- typeof productCards !== 'undefined' ? productCards : '' %>
  </section>
</main>
