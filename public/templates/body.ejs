<section class="hero">
  <div class="hero-content">
    <h2 id="hoverToChange">
      Discover,share,and discuss all the latest insights and products.
    </h2>
    <% if (!isLoggedIn) { %>
    <a href="/user/signup" class="cta-btn">Get Started</a>
    <% } %>
  </div>
</section>

<% if (typeof hiddenMessage !== 'undefined' && hiddenMessage) { %>
<div class="alert-message"><%= hiddenMessage %></div>
<% } %>

<main>
  <section class="card-grid">
    <%- typeof productCards !== 'undefined' ? productCards : '' %>
  </section>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const wordEl = document.getElementById("hoverToChange");
      const letters = wordEl.textContent.split('');
      wordEl.innerHTML = letters
        .map(letter => {
          return letter === ' '
            ? ' '
            : `<span class="hoverToBig">${letter}</span>`;
        })
        .join('');
    });
  </script>
</main>
