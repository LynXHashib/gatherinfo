<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | GatherInfo</title>
    <link rel="stylesheet" href="/home/style.css" />
  </head>
  <body>
    <%- include('header.ejs') %>
    <main>
      <section class="form-section">
        <h2>Welcome Back</h2>
        <form class="post-form" action="/user/login" method="post">
          <input
            type="email"
            name="email"
            class="post-title"
            placeholder="Email"
            required
          />
          <input
            type="password"
            name="password"
            class="post-title"
            placeholder="Password"
            required
          />
          <button type="submit" class="post-btn">Login</button>
        </form>
        <div class="form-footer">
          <span>Don't have an account?</span>
          <a href="/user/signup" class="form-link">Sign Up</a>
        </div>
      </section>
    </main>
    <%- include('footer.ejs') %>
  </body>
</html>
