<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up | GatherInfo</title>
    <link rel="stylesheet" href="/home/style.css" />
  </head>
  <body>
    <%- include('header.ejs') %>
    <main>
      <section class="form-section">
        <h2>Create Your Account</h2>
        <form class="post-form" action="/user/signup" method="post">
          <input
            type="text"
            name="firstName"
            class="post-title"
            placeholder="First Name"
            required
          />
          <input
            type="text"
            name="lastName"
            class="post-title"
            placeholder="Last Name"
          />
          <input
            type="email"
            name="email"
            class="post-title"
            placeholder="Email"
            required
          />
          <input
            type="password"
            name="password"
            class="post-title"
            placeholder="Password"
            required
          />
          <button type="submit" class="post-btn">Sign Up</button>
        </form>
        <div class="form-footer">
          <span>Already have an account?</span>
          <a href="/user/login" class="form-link">Login</a>
        </div>
      </section>
    </main>
    <%- include('footer.ejs') %>
  </body>
</html>
